    "version": "1.0.0",
    "baseUrl": "https://www.amerilendloan.com",
    "apiBaseUrl": "https://www.amerilendloan.com/api/trpc"
  },
  "environment": {
    "test": {
      "baseUrl": "http://localhost:5000",
